{
  "name": "template-typescript-lib",
  "version": "0.0.0-dripip",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/jasonkuhrt/template-typescript-lib.git"
  },
  "author": {
    "name": "Jason Kuhrt",
    "url": "https://kuhrt.me"
  },
  "keywords": [
    "foo",
    "bar",
    "qux"
  ],
  "bugs": {
    "url": "https://github.com/jasonkuhrt/template-typescript-lib/issues"
  },
  "packageManager": "pnpm@10.11.0",
  "license": "MIT",
  "engines": {
    "node": ">=22"
  },
  "sideEffects": false,
  "type": "module",
  "files": [
    "src",
    "build",
    "README.md"
  ],
  "exports": {
    ".": "./build/exports/index.js"
  },
  "scripts": {
    "bootstrap": "tsx scripts/bootstrap.ts",
    "build:toc": "markdown-toc README.md -i --maxdepth 4 && dprint fmt README.md",
    "build:watch:emit": "pnpm build --noCheck --watch",
    "build:watch": "pnpm build --watch",
    "build:emit": "pnpm build --noEmit",
    "build": "tsgo --build tsconfig.build.json",
    "build:clean": "tsgo --build --clean && rm -rf build",
    "prebuild": "pnpm build:clean",
    "test": "pnpm test:unit",
    "test:unit": "vitest --root src",
    "prepack": "pnpm build",
    "fix": "pnpm run '/fix:.*/'",
    "fix:format": "dprint fmt",
    "fix:lint": "oxlint --fix src",
    "check": "pnpm run '/check:.*/'",
    "check:format": "dprint check",
    "check:lint": "oxlint src",
    "check:types": "tsgo",
    "check:package": "publint run --strict",
    "check:exports": "attw --pack . --profile esm-only",
    "check:ci": "actionlint"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@tsconfig/node22": "^22.0.5",
    "@tsconfig/strictest": "2.0.8",
    "@types/node": "25.0.3",
    "@typescript/native-preview": "7.0.0-dev.20251219.1",
    "dprint": "^0.50.2",
    "dripip": "0.10.0",
    "execa": "9.6.1",
    "fast-glob": "3.3.3",
    "floggy": "0.3.5",
    "fs-jetpack": "5.1.0",
    "inquirer": "13.1.0",
    "markdown-toc": "1.2.0",
    "oxlint": "^1.34.0",
    "publint": "^0.3.16",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  }
}
