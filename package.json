{
  "name": "crossmod",
  "version": "0.0.0-dripip",
  "description": "Auto-generate and maintain TypeScript re-export index files",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/jasonkuhrt/crossmod.git"
  },
  "author": {
    "name": "Jason Kuhrt",
    "url": "https://kuhrt.me"
  },
  "keywords": [
    "typescript",
    "barrel",
    "index",
    "re-export",
    "codegen"
  ],
  "bugs": {
    "url": "https://github.com/jasonkuhrt/crossmod/issues"
  },
  "packageManager": "pnpm@10.11.0",
  "license": "MIT",
  "engines": {
    "node": ">=22"
  },
  "sideEffects": false,
  "type": "module",
  "files": [
    "src",
    "build",
    "README.md"
  ],
  "exports": {
    ".": "./build/exports/index.js"
  },
  "bin": {
    "crossmod": "./build/bin/cli.js",
    "xm": "./build/bin/cli.js"
  },
  "scripts": {
    "build:toc": "markdown-toc README.md -i --maxdepth 4 && dprint fmt README.md",
    "build:watch:emit": "pnpm build --noCheck --watch",
    "build:watch": "pnpm build --watch",
    "build:emit": "pnpm build --noEmit",
    "build": "tsgo --build tsconfig.build.json",
    "build:clean": "tsgo --build --clean && rm -rf build",
    "prebuild": "pnpm build:clean",
    "test": "pnpm test:unit",
    "test:unit": "vitest --root src",
    "prepack": "pnpm build",
    "fix": "pnpm run '/fix:.*/'",
    "fix:format": "dprint fmt",
    "fix:lint": "oxlint --fix src",
    "check": "pnpm run '/check:.*/'",
    "check:format": "dprint check",
    "check:lint": "oxlint src",
    "check:types": "tsgo",
    "check:package": "publint run --strict",
    "check:exports": "attw --pack . --profile esm-only",
    "check:ci": "actionlint"
  },
  "dependencies": {
    "@effect/cli": "^0.73.2",
    "@effect/platform": "^0.94.4",
    "@effect/platform-node": "^0.104.1",
    "@parcel/watcher": "^2.5.6",
    "effect": "^3.19.16",
    "jiti": "^2.4.2",
    "picocolors": "^1.1.1",
    "picomatch": "^4.0.2",
    "tinyglobby": "^0.2.12",
    "tsconfck": "^3.1.5",
    "yocto-spinner": "^0.2.1"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@effect/vitest": "^0.27.0",
    "@tsconfig/node22": "^22.0.5",
    "@tsconfig/strictest": "2.0.8",
    "@types/node": "25.0.3",
    "@types/picomatch": "^3.0.1",
    "@typescript/native-preview": "7.0.0-dev.20251219.1",
    "dprint": "^0.50.2",
    "dripip": "0.10.0",
    "markdown-toc": "1.2.0",
    "oxlint": "^1.34.0",
    "publint": "^0.3.16",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "dprint",
      "esbuild",
      "msgpackr-extract"
    ]
  }
}
